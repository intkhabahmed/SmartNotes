<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="ActivityTheme.Primary.Base.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppThemeDark" parent="ActivityTheme.Primary.Base.Dark">
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>
    
    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/primaryTextColor</item>
        <item name="secondaryTextColor">@color/secondaryTextColor</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="iconColor">@android:color/white</item>
        <item name="cardBackground">@android:color/transparent</item>
        <item name="iconPlaceHolder">@android:color/black</item>
        <item name="preferenceTheme">@style/PreferenceThemeLight</item>
        <item name="editTextColor">@android:color/black</item>
        <item name="hintColor">@style/HintStyleLight</item>
    </style>

    <style name="ActivityTheme.Primary.Base.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/nightColorPrimary</item>
        <item name="colorPrimaryDark">@color/nightColorPrimaryDark</item>
        <item name="colorAccent">@color/nightColorAccent</item>
        <item name="primaryTextColor">@color/nightPrimaryTextColor</item>
        <item name="secondaryTextColor">@color/nightSecondaryTextColor</item>
        <item name="backgroundColor">@color/windowBackground</item>
        <item name="iconColor">@android:color/black</item>
        <item name="cardBackground">@color/cardBackgroundColor</item>
        <item name="iconPlaceHolder">@android:color/white</item>
        <item name="preferenceTheme">@style/PreferenceThemeDark</item>
        <item name="editTextColor">@android:color/white</item>
        <item name="hintColor">@style/HintStyleDark</item>
    </style>

    <style name="PreferenceThemeLight" parent="@style/PreferenceThemeOverlay">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>
    <style name="PreferenceThemeDark" parent="@style/PreferenceThemeOverlay">
        <item name="android:textColorPrimary">@color/nightPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/nightSecondaryTextColor</item>
    </style>

    <style name="HintStyleLight" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="HintStyleDark" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/nightColorAccent</item>
    </style>

</resources>
